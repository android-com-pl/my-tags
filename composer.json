{
    "name": "acpl/my-tags",
    "description": "Displays a list of tags that the user is following in the sidebar.",
    "keywords": [
        "flarum",
        "tags",
        "sidebar",
        "follow"
    ],
    "type": "flarum-extension",
    "license": "MIT",
    "support": {
        "issues": "https://github.com/android-com-pl/my-tags/issues",
        "source": "https://github.com/android-com-pl/my-tags",
        "forum": "https://discuss.flarum.org/d/28004-my-tags"
    },
    "require": {
        "flarum/core": "^1.2",
        "fof/follow-tags": "*"
    },
    "authors": [
        {
            "name": "Rafał Całka",
            "email": "rafal.calka@android.com.pl",
            "role": "Developer"
        },
        {
            "name": "Szymon Kilar",
            "role": "Developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "Acpl\\MyTags\\": "src/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "My Tags",
            "category": "feature",
            "icon": {
                "name": "fas fa-th-list",
                "backgroundColor": "#0F9D58",
                "color": "#fff"
            }
        },
        "flarum-cli": {
            "modules": {
                "admin": true,
                "forum": true,
                "js": true,
                "jsCommon": false,
                "gitConf": true,
                "githubActions": true,
                "prettier": true,
                "typescript": true,
                "bundlewatch": false,
                "backendTesting": false,
                "editorConfig": true,
                "styleci": true,
                "css": true
            }
        }
    }
}
