{
  "name": "acpl/my-tags",
  "description": "Displays a list of tags that the user is following in the sidebar.",
  "keywords": [
    "flarum"
  ],
  "type": "flarum-extension",
  "license": "MIT",
  "require": {
    "flarum/core": "^1.0",
    "fof/follow-tags": "*"
  },
  "authors": [
    {
      "name": "Rafał Całka",
      "email": "rafal.calka@android.com.pl",
      "role": "Developer"
    },
    {
      "name": "Szymon Kilar",
      "role": "Developer"
    }
  ],
  "autoload": {
    "psr-4": {
      "Acpl\\MyTags\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Acpl\\MyTags\\Tests\\": "tests/"
    }
  },
  "extra": {
    "flarum-extension": {
      "title": "My Tags",
      "category": "",
      "icon": {
        "name": "fas fa-th-list",
        "backgroundColor": "#0F9D58",
        "color": "#fff"
      }
    },
    "flagrow": {
      "discuss": "feature"
    }
  }
}
